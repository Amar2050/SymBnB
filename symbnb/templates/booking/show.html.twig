{% extends "base.html.twig" %}

{% block title %}Réservation : <strong>{{booking.id}}</strong>{% endblock %}

{% block body %}

    {% set ad     = booking.ad %}
    {% set author = booking.ad.author %}

    <div class="container">
        <div class="bg-light my-5">
            <h1>Votre Réservation pour {{booking.ad.title}}</h1>
            <p><strong>Numéro de réservation: {{booking.id}}</strong></p>
        </div>

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Détails</h2>
                    <dl class="row">
                        <dt class="col-md-4">Numéro</dt>
                        <dd class="col-md-8">{{booking.id}}</dd>
                        <dt class="col-md-4">Date d'arrivée</dt>
                        <dd class="col-md-8">{{booking.startDate | date('d/m/Y')}}</dd>
                        <dt class="col-md-4">Date de départ</dt>
                        <dd class="col-md-8">{{booking.endDate | date('d/m/Y')}}</dd>
                        <dt class="col-md-4">Nombre de nuit(s)</dt>
                        <dd class="col-md-8">{{booking.duration}}</dd>
                        <dt class="col-md-4">Montant total</dt>
                        <dd class="col-md-8">{{booking.amount}} &euro;</dd>
                        <dt class="col-md-4">Commentaire</dt>
                        <dd class="col-md-8">{{booking.comment}}</dd>
                    </dl>

                    <hr>

                    <h2 class="alert-heading">Votre hôte</h2>

                    <div class="row mb-3">
                        <div class="col-3">
                            <img src="{{author.picture}}" class="avatar avatar-medium" 
                                alt="avatar de {{author.fullName}}">
                        </div>
                        <div class="col-9">
                            <h4>
                                <a href="{{ path('user_show', {'slug': author.slug}) }}">{{author.fullName}}</a>
                            </h4>
                            <span class="badge badge-primary">{{author.ads | length}} annonce(s)</span>
                        </div>
                    </div>
                    {{author.description | raw}}

                    <a href="{{ path("user_show", {'slug': author.slug})}}" 
                        class="btn btn-secondary">Plus d'infos sur {{author.firstName}}</a>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2>Votre hébergement</h2>

                    <h4>
                        <a href="{{ path('ad_show', {'slug': ad.slug})}}">{{ad.title}}</a>
                    </h4>
                </div>
            </div>
        </div>
    </div>
{% endblock %}