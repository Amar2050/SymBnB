{% extends "admin/base.html.twig" %}

{% block title %}Correction d'annonce{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modération de l'annonce: <em>{{ad.title}}</em></h1>
        {{form_start(form)}}
        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">
                            <i class="fas fa-pen"></i>
                            Corriger l'annonce ?
                        </h4>
                    </div>
                    <div class="card-body">
                        {{form_widget(form)}}
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i>
                            Enregister les modifications
                        </button>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-light my-2">
                    <div class="card-header">
                        <h4 class="card-title">
                            <i class="fas fa-folder"></i>
                            Les réservations
                        </h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Client</th>
                                    <th>Date de réservation</th>
                                    <th>edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for booking in ad.bookings %}
                                <tr>
                                    <td>{{booking.id}}</td>
                                    <td>{{booking.booker.fullName}}</td>
                                    <td>{{booking.createdAt | date('d/m/Y')}}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card bg-light my-2">
                    <div class="card-header">
                        <h4 class="card-title">
                            <i class="fas fa-comments"></i>
                            Les commentaires
                        </h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Client</th>
                                    <th>Note</th>
                                    <th>Commentaire</th>
                                    <th>edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for comment in ad.comments %}
                                <tr>
                                    <td>{{comment.id}}</td>
                                    <td>{{comment.author.fullName}}</td>
                                    <td>{{comment.rating | round('1', 'floor')}}</td>
                                    <td>{{comment.content}}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>
        </div>
        
        
        {{form_end(form)}}

    </div>
{% endblock %}